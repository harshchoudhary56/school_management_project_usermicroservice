<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="2025-08-12-23-52_alter-book-data" author="${author_1}" dbms="${database}" context="${context_development}">
        <comment>Make ISBN column unique in book table</comment>

        <addUniqueConstraint
                tableName="${tbl_book}"
                columnNames="isbn"
                constraintName="uq_book_isbn"/>
    </changeSet>

</databaseChangeLog>